<resources>
    <!-- Base application theme. -->
    <style name="Theme.INSOPTAndroidPractice" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Text style -->
    <style name="Text24" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text24.Bold" parent="Text24">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text20" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text20.Bold" parent="Text20">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text18" parent="Text20">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Text18.Bold" parent="Text18">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text16" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text16.Bold" parent="Text16">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text16.White" parent="Text16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Text14" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Text14.Bold" parent="Text14">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Splash theme -->
    <style name="Theme.INSOPTAndroidPractice.Splash">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Circle Image View -->
    <style name="Circle">
        <item name="cornerSize">50%</item>
    </style>
</resources>